<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/border_bg">
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="44dp"
        android:background="@drawable/border_bg"
        android:padding="2dp">
		<ImageView
            android:id="@+id/iv_activity_travel_back"
            android:layout_width="60dp"
	        android:layout_height="36dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:contentDescription="@string/app_name"
            android:src="@drawable/ic_launcher"/>
        <TextView
            android:id="@+id/tv_activity_travel_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="2013-12-01"
            android:textColor="@color/black"
            android:textSize="@dimen/title"
            android:textStyle="bold" />
		<ImageView 
            android:id="@+id/iv_activity_travel_data_previous" 
            android:contentDescription="@string/app_name"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_toLeftOf="@id/tv_activity_travel_data"
            android:src="@drawable/ic_launcher"/>
        <ImageView
            android:id="@+id/iv_activity_travel_data_next" 
            android:contentDescription="@string/app_name"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_toRightOf="@id/tv_activity_travel_data"
            android:src="@drawable/ic_launcher"/>
	</RelativeLayout>
	<TableLayout 
	    android:stretchColumns="*" 
	    android:padding="10dp"
	    android:background="@drawable/border_bg"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content">
	    <TableRow android:background="@color/black">
	        <TextView
	            android:paddingTop="5dp"
	            android:paddingBottom="5dp"
	            android:background="@color/white"
	            android:textColor="@color/black"
	            android:textSize="@dimen/title"
	            android:gravity="left"
	            android:text="行驶总里程：37.00KM"/>
	        <TextView
	            android:paddingTop="5dp"
	            android:paddingBottom="5dp"
	            android:background="@color/white"
	            android:textColor="@color/black"
	            android:textSize="@dimen/title"
	            android:gravity="center_horizontal"
	            android:text="油耗：4.15L"/>
	    </TableRow>
	    <TableRow 
	        android:background="@color/black">
	        <TextView 
	            android:paddingTop="5dp"
	            android:paddingBottom="5dp"
	            android:background="@color/white"
	            android:textColor="@color/black"
	            android:textSize="@dimen/title"
	            android:gravity="left"
	            android:text="百公里油耗：11.20L"/>
	        <TextView 
	            android:paddingTop="5dp"
	            android:paddingBottom="5dp"
	            android:background="@color/white"
	            android:textColor="@color/black"
	            android:textSize="@dimen/title"
	            android:gravity="center_horizontal"
	            android:text="话费31.04元"/>
	    </TableRow>
	</TableLayout>
	<ListView 
	    android:id="@+id/lv_activity_travel"
	    android:layout_width="fill_parent"
	    android:layout_height="fill_parent"
	    android:layout_margin="10dp"
        android:divider="@null"
        android:cacheColorHint="#00000000"></ListView>
</LinearLayout>