<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="#FFFFFF"
    >
    
      <!-- 头部 -->

    <RelativeLayout
        android:layout_width="fill_parent"
        android:background="@drawable/nav_bg"
        android:layout_height="@dimen/title_hight">
		<ImageView
            android:id="@+id/choice_insurance_cancle"
            android:layout_width="@dimen/title_image"
	        android:layout_height="@dimen/title_image"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:clickable="true"
            android:layout_marginLeft="@dimen/margins"
            android:contentDescription="@string/app_name"
            android:src="@drawable/side_back"/>
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_toRightOf="@+id/choice_insurance_cancle"
            android:gravity="center"
            android:text="@string/insurance_company"
            android:textColor="@color/white"
            android:textSize="@dimen/head"/>
	</RelativeLayout>
    <View 
        android:layout_width="fill_parent"
        android:layout_height="0.5dip"
        android:background="@color/gray"
        />

    <com.wise.list.XListView
        android:id="@+id/insurance_company_list"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:cacheColorHint="#00000000"
        android:scrollingCache="false"
        android:dividerHeight="0.5dip"
        android:divider="@color/gray"
         >
    </com.wise.list.XListView>

</LinearLayout>