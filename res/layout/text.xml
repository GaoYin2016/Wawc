<RelativeLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF">
    <RelativeLayout 
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:background="@drawable/energy_degree"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <RelativeLayout 
            android:id="@+id/rl_activity_vehicle_status_oil"
            android:layout_width="200dp"
            android:layout_height="wrap_content">
            <TextView 
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_centerHorizontal="true"
	            android:textColor="@color/black"    
	            android:textSize="30sp"        
	            android:text="11.20L"/>
        </RelativeLayout>
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/rl_activity_vehicle_status_oil"
            android:layout_centerHorizontal="true"
            android:textColor="@color/black"            
            android:text="[点击查看详情]"/>
    </RelativeLayout>
    <RelativeLayout 
        android:layout_alignParentBottom="true"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <TextView 
            android:id="@+id/tv_activity_vehicle_status_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="@color/black"
            android:text="2013-12"/>
        <ImageView 
            android:id="@+id/iv_activity_vehicle_status_data_previous" 
            android:contentDescription="@string/app_name"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_toRightOf="@id/tv_activity_vehicle_status_data"
            android:src="@drawable/ic_launcher"/>
        <ImageView
            android:id="@+id/iv_activity_vehicle_status_data_next" 
            android:contentDescription="@string/app_name"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_toLeftOf="@id/tv_activity_vehicle_status_data"
            android:src="@drawable/ic_launcher"/>
    </RelativeLayout>
</RelativeLayout>