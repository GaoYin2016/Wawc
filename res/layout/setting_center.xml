<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#FFFFFF"
    android:orientation="vertical"
    tools:context=".VehicleStatusActivity" >

    <!-- 头部 -->

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/setting_center_menu"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@drawable/ic_launcher" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/setup_center"
            android:textSize="10pt" />

        <Button
            android:id="@+id/setting_center_home"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@drawable/ic_launcher" />
    </LinearLayout>
    
    
    <TableLayout 
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#000000"
        >
        <TableRow 
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:padding="2dip"
            android:layout_marginLeft="1dip"
            android:layout_marginRight="1dip"
            android:layout_marginTop="1dip"
            >
            <TextView 
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:text="@string/search_setting"
                android:layout_gravity="center"
                android:textColor="#000000"
                android:textSize="10pt"
                />
        </TableRow>
        
         <TableRow 
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:padding="2dip"
            android:layout_marginLeft="1dip"
            android:layout_marginRight="1dip"
            android:layout_marginTop="1dip"
            >
            <TextView 
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:text="@string/default_center"
                android:gravity="left"
                android:layout_weight="1"
                android:textColor="#000000"
                android:textSize="16dip"
                />
			            <TextView
		                android:id="@+id/tv_value"
		                android:layout_width="fill_parent"
		                android:layout_height="wrap_content"
			            android:layout_centerVertical="true"
		                android:text="车辆粤B12345的位置"
		                android:layout_weight="1"
		                android:textColor="#000000"
		                android:textSize="16dip"
		                >
			            </TextView>
			            
		            	<ImageButton
		                android:id="@+id/bt_dropdown"
		                android:layout_width="15dip"
		                android:layout_height="15dip"
		                android:background="@drawable/down_arrow"
		                android:layout_weight="1" />
        </TableRow>
        
        <TableRow 
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:padding="2dip"
            android:layout_marginLeft="1dip"
            android:layout_marginRight="1dip"
            android:layout_marginTop="1dip"
            >
            <TextView 
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:text="@string/push_setting"
                android:layout_gravity="center"
                android:textColor="#000000"
                android:textSize="10pt"
                />
        </TableRow>
        <TableRow 
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:padding="2dip"
            android:layout_marginLeft="1dip"
            android:layout_marginRight="1dip"
            android:layout_marginTop="1dip"
            >
            <RelativeLayout 
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                >
                <TextView 
                    android:id="@+id/against_push"
	                android:layout_width="fill_parent"
	                android:layout_height="wrap_content"
	                android:text="@string/against_push"
	                android:layout_gravity="center"
	                android:textColor="#000000"
	                android:textSize="16dip"
                />
                <RadioButton 
                    android:layout_height="20dip"
                    android:layout_width="40dip"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:button="@drawable/radio_button"
                    />
            </RelativeLayout>
        </TableRow>
        
        <TableRow 
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:padding="2dip"
            android:layout_marginLeft="1dip"
            android:layout_marginRight="1dip"
            android:layout_marginTop="1dip"
            >
            <RelativeLayout 
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                >
                <TextView 
	                android:layout_width="fill_parent"
	                android:layout_height="wrap_content"
	                android:text="@string/bug_push"
	                android:layout_gravity="center"
	                android:textColor="#000000"
	                android:textSize="16dip"
                />
                <RadioButton
                    android:layout_width="40dip"
                    android:layout_height="20dip"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    />
                
            </RelativeLayout>
        </TableRow>
        
        <TableRow 
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:padding="2dip"
            android:layout_marginLeft="1dip"
            android:layout_marginRight="1dip"
            android:layout_marginTop="1dip"
            >
            <RelativeLayout 
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                >
                <TextView 
	                android:layout_width="fill_parent"
	                android:layout_height="wrap_content"
	                android:text="@string/traffic_department"
	                android:layout_gravity="center"
	                android:textColor="#000000"
	                android:textSize="16dip"
                />
                <ImageView 
                    android:layout_height="20dip"
                    android:layout_width="40dip"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:background="@drawable/ic_launcher"
                    />
            </RelativeLayout>
        </TableRow>
        <TableRow 
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:padding="2dip"
            android:layout_marginLeft="1dip"
            android:layout_marginRight="1dip"
            android:layout_marginTop="1dip"
            >
            <TextView 
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:text="@string/system_setting"
                android:layout_gravity="center"
                android:textColor="#000000"
                android:textSize="10pt"
                />
        </TableRow>
        <TableRow 
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:padding="2dip"
            android:layout_marginLeft="1dip"
            android:layout_marginRight="1dip"
            android:layout_marginTop="1dip"
            >
            <RelativeLayout 
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                >
                <TextView 
	                android:layout_width="fill_parent"
	                android:layout_height="wrap_content"
	                android:text="@string/share_gift"
	                android:layout_gravity="center"
	                android:textColor="#000000"
	                android:textSize="16dip"
                />
                <ImageView 
                    android:id="@+id/share_have_gift"
                    android:layout_height="20dip"
                    android:layout_width="40dip"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:background="@drawable/ic_launcher"
                    />
            </RelativeLayout>
        </TableRow>
        <TableRow 
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:padding="2dip"
            android:layout_marginLeft="1dip"
            android:layout_marginRight="1dip"
            android:layout_marginTop="1dip"
            >
            <RelativeLayout 
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                >
                <TextView 
	                android:layout_width="fill_parent"
	                android:layout_height="wrap_content"
	                android:text="@string/feedbaack"
	                android:layout_gravity="center"
	                android:textColor="#000000"
	                android:textSize="16dip"
                />
                <ImageView 
                    android:id="@+id/feedback"
                    android:layout_height="20dip"
                    android:layout_width="40dip"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:background="@drawable/ic_launcher"
                    />
            </RelativeLayout>
        </TableRow>
        <TableRow 
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:padding="2dip"
            android:layout_marginLeft="1dip"
            android:layout_marginRight="1dip"
            android:layout_marginTop="1dip"
            >
            <RelativeLayout 
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                >
                <TextView 
	                android:layout_width="fill_parent"
	                android:layout_height="wrap_content"
	                android:text="@string/give_us_score"
	                android:layout_gravity="center"
	                android:textColor="#000000"
	                android:textSize="16dip"
                />
                <ImageView 
                    android:id="@+id/give_us_score"
                    android:layout_height="20dip"
                    android:layout_width="40dip"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:background="@drawable/ic_launcher"
                    />
            </RelativeLayout>
        </TableRow>
        
        <TableRow 
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:padding="2dip"
            android:layout_marginLeft="1dip"
            android:layout_marginRight="1dip"
            android:layout_marginTop="1dip"
            >
            <RelativeLayout 
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                >
                <TextView 
	                android:layout_width="fill_parent"
	                android:layout_height="wrap_content"
	                android:text="@string/about_appliaction"
	                android:layout_gravity="center"
	                android:textColor="#000000"
	                android:textSize="16dip"
                />
                <ImageView 
                    android:id="@+id/about_appliaction"
                    android:layout_height="20dip"
                    android:layout_width="40dip"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:background="@drawable/ic_launcher"
                    />
            </RelativeLayout>
        </TableRow>
    </TableLayout>
</LinearLayout>
