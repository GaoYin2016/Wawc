<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/border_bg"
    android:orientation="vertical">
    <TextView 
        android:id="@+id/tv_item_dealadress_name"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/title"
        android:textColor="@color/black"
        android:padding="10dp"
        android:background="@drawable/border_bg"
        android:text="深圳市交通局"/>
    <LinearLayout
        android:background="@drawable/border_bg"
        android:orientation="vertical" 
        android:layout_width="fill_parent"
        android:padding="10dp"
        android:layout_height="wrap_content">
        <TextView 
            android:id="@+id/tv_item_dealadress_adress"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"            
            android:text="地址：沙河西路1号"            
            android:textColor="@color/black"
	        android:textSize="@dimen/title"/>
        <TextView 
            android:id="@+id/tv_item_dealadress_phone"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="电话：0755-8787878787"
            android:textColor="@color/black"
	        android:textSize="@dimen/title"/>
    </LinearLayout>
    <LinearLayout
        android:background="@drawable/border_bg"
        android:orientation="horizontal" 
        android:padding="10dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <RelativeLayout 
            android:id="@+id/rl_item_dealadress_collection"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/iv_item_travel_start" 
                android:contentDescription="@string/app_name"
                android:src="@drawable/ic_launcher"
                android:layout_width="30dp"
                android:layout_height="30dp"/>
	        <TextView
	            android:id="@+id/tv_item_travel_startPlace"  
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_centerVertical="true"
	            android:layout_toRightOf="@id/iv_item_travel_start"
	            android:textColor="@color/black"
		        android:textSize="@dimen/title"
	            android:text="收藏"/>
        </RelativeLayout>
        <RelativeLayout 
            android:id="@+id/rl_item_dealadress_call"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/iv_item_travel_stop" 
                android:contentDescription="@string/app_name"
                android:src="@drawable/ic_launcher"
                android:layout_width="30dp"
                android:layout_height="30dp"/>
	        <TextView
	            android:id="@+id/tv_item_travel_stopPlace" 
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_centerVertical="true"
	            android:layout_toRightOf="@id/iv_item_travel_stop"
	            android:textColor="@color/black"
		        android:textSize="@dimen/title"
	            android:text="电话"/>
        </RelativeLayout>
        <RelativeLayout 
            android:id="@+id/rl_item_dealadress_navigation"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/iv_item_travel_stop" 
                android:contentDescription="@string/app_name"
                android:src="@drawable/ic_launcher"
                android:layout_width="30dp"
                android:layout_height="30dp"/>
	        <TextView
	            android:id="@+id/tv_item_travel_stopPlace" 
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_centerVertical="true"
	            android:layout_toRightOf="@id/iv_item_travel_stop"
	            android:textColor="@color/black"
		        android:textSize="@dimen/title"
	            android:text="去这里"/>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
