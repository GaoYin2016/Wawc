<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/border_bg"
    android:orientation="vertical">
    <RelativeLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/bkg1"
        android:padding="10dp">
        <TextView 
            android:id="@+id/tv_item_dealadress_distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:textSize="@dimen/title"
        	android:textColor="@color/black"
            android:layout_marginLeft="10dp"/>
        <TextView 
            android:id="@+id/tv_item_dealadress_name"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/tv_item_dealadress_distance"
            android:layout_centerVertical="true"
            android:textSize="@dimen/title"
        	android:textColor="@color/black"/>
    </RelativeLayout>
    <LinearLayout
        android:orientation="vertical" 
        android:layout_width="fill_parent"
        android:padding="10dp"
        android:layout_height="wrap_content">
        <TextView 
            android:id="@+id/tv_item_dealadress_adress"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"            
            android:text="地址：沙河西路1号"            
            android:textColor="@color/black"
	        android:textSize="@dimen/title"/>
        <TextView 
            android:id="@+id/tv_item_dealadress_phone"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="电话：0755-8787878787"
            android:textColor="@color/black"
	        android:textSize="@dimen/title"/>
    </LinearLayout>
    <LinearLayout
        android:background="@drawable/border_bg"
        android:orientation="horizontal" 
        android:padding="10dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <LinearLayout 
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
	        android:layout_weight="1">
            <Button 
                android:id="@+id/bt_item_dealadress_collection"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:drawableLeft="@drawable/ic_launcher"
	            android:focusable="false"
	            android:background="@null"
	            android:text="收藏"/>
        </LinearLayout>
        <LinearLayout 
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
	        android:layout_weight="1">
            <Button 
                android:id="@+id/bt_item_dealadress_call"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:drawableLeft="@drawable/ic_launcher"
	            android:focusable="false"
	            android:background="@null"
	            android:text="电话"/>
        </LinearLayout>
        <LinearLayout 
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
	        android:layout_weight="1">
            <Button 
                android:id="@+id/bt_item_dealadress_navigation"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:drawableLeft="@drawable/ic_launcher"
	            android:focusable="false"
	            android:background="@null"
	            android:text="去这里"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
