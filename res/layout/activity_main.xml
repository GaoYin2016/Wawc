<RelativeLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">	
    <com.wise.extend.SlidingMenuView
        android:id="@+id/sliding_menu_view"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">        
       <LinearLayout 
	       	android:id="@+id/left_sliding_tab"
	       	android:orientation="vertical"
	        android:layout_width="500dp"
	       	android:layout_height="fill_parent">
	       	<RelativeLayout 
	       	    android:layout_height="wrap_content"
	       	    android:layout_width="fill_parent">
	       	    <ImageView
	       	        android:id="@+id/iv_activity_main_logo"
	       	        android:layout_height="40dp"
	       	        android:layout_width="40dp"
	       	        android:contentDescription="@string/app_name"
	       	        android:src="@drawable/ic_launcher"/>
	       	    <TextView 
	       	        android:id="@+id/tv_activity_main_name"
	       	        android:layout_width="wrap_content"
	       	        android:layout_height="wrap_content"
	       	        android:layout_toRightOf="@id/iv_activity_main_logo"
	       	        android:textColor="@color/black"
	       	        android:text="Thomas"/>
	       	    <ImageView
	       	        android:id="@+id/iv_activity_main_qq"
	       	        android:layout_height="20dp"
	       	        android:layout_width="20dp"
	       	        android:layout_toRightOf="@id/iv_activity_main_logo"
	       	        android:layout_below="@id/tv_activity_main_name"
	       	        android:contentDescription="@string/app_name"
	       	        android:src="@drawable/ic_launcher"/>
	       	    <ImageView
	       	        android:id="@+id/iv_activity_main_sina"
	       	        android:layout_height="20dp"
	       	        android:layout_width="20dp"
	       	        android:layout_toRightOf="@id/iv_activity_main_qq"
	       	        android:layout_below="@id/tv_activity_main_name"
	       	        android:contentDescription="@string/app_name"
	       	        android:src="@drawable/ic_launcher"/>
	       	     <ImageView
	       	        android:id="@+id/iv_activity_main_login_qq"
	       	        android:layout_height="30dp"
	       	        android:layout_width="30dp"
	       	        android:layout_alignParentRight="true"
	       	        android:layout_centerVertical="true"
	       	        android:contentDescription="@string/app_name"
	       	        android:src="@drawable/ic_launcher"/>
	       	     <ImageView
	       	        android:id="@+id/iv_activity_main_login_sina"
	       	        android:layout_height="30dp"
	       	        android:layout_width="30dp"
	       	        android:layout_toLeftOf="@id/iv_activity_main_login_qq"
	       	        android:layout_centerVertical="true"
	       	        android:contentDescription="@string/app_name"
	       	        android:src="@drawable/ic_launcher"/> 	    
	       	</RelativeLayout>
	       	<TextView 
	       	    android:layout_width="fill_parent"
	       	    android:layout_height="wrap_content"
	       	    android:textColor="@color/black"
	       	    android:textSize="@dimen/title"
	       	    android:padding="5dp"
	       	    android:background="@drawable/border_bg"
	       	    android:text="@string/social"/>
	       	<LinearLayout 
	       	    android:layout_width="fill_parent"
	       	    android:layout_height="wrap_content"
	       	    android:padding="5dp"
	       	    android:background="@drawable/border_bg"
	       	    android:gravity="center_vertical"
	       	    android:orientation="horizontal">
	       	    <ImageView
	       	        android:layout_height="30dp"
	       	        android:layout_width="30dp"
	       	        android:contentDescription="@string/app_name"
	       	        android:src="@drawable/ic_launcher"/>
	       	    <TextView 
		       	    android:layout_width="wrap_content"
		       	    android:layout_height="wrap_content"
		       	    android:textColor="@color/black"
		       	    android:textSize="@dimen/title"
		       	    android:layout_marginLeft="10dp"
		       	    android:text="@string/car_circle"/>
	       	</LinearLayout>
	       	<TextView 
	       	    android:layout_width="fill_parent"
	       	    android:layout_height="wrap_content"
	       	    android:textColor="@color/black"
	       	    android:textSize="@dimen/title"
	       	    android:padding="5dp"
	       	    android:background="@drawable/border_bg"
	       	    android:text="@string/my_center"/>
	       	<LinearLayout 
	       	    android:layout_width="fill_parent"
	       	    android:layout_height="wrap_content"
	       	    android:padding="5dp"
	       	    android:background="@drawable/border_bg"
	       	    android:gravity="center_vertical"
	       	    android:orientation="horizontal">
	       	    <ImageView
	       	        android:layout_height="30dp"
	       	        android:layout_width="30dp"
	       	        android:contentDescription="@string/app_name"
	       	        android:src="@drawable/ic_launcher"/>
	       	    <TextView 
		       	    android:layout_width="wrap_content"
		       	    android:layout_height="wrap_content"
		       	    android:textColor="@color/black"
		       	    android:textSize="@dimen/title"
		       	    android:layout_marginLeft="10dp"
		       	    android:text="@string/car_remind"/>
	       	</LinearLayout>
	       	<LinearLayout 
	       	    android:layout_width="fill_parent"
	       	    android:layout_height="wrap_content"
	       	    android:padding="5dp"
	       	    android:background="@drawable/border_bg"
	       	    android:gravity="center_vertical"
	       	    android:orientation="horizontal">
	       	    <ImageView
	       	        android:layout_height="30dp"
	       	        android:layout_width="30dp"
	       	        android:contentDescription="@string/app_name"
	       	        android:src="@drawable/ic_launcher"/>
	       	    <TextView 
		       	    android:layout_width="wrap_content"
		       	    android:layout_height="wrap_content"
		       	    android:textColor="@color/black"
		       	    android:textSize="@dimen/title"
		       	    android:layout_marginLeft="10dp"
		       	    android:text="@string/my_car"/>
	       	</LinearLayout>
	       	<LinearLayout 
	       	    android:layout_width="fill_parent"
	       	    android:layout_height="wrap_content"
	       	    android:padding="5dp"
	       	    android:background="@drawable/border_bg"
	       	    android:gravity="center_vertical"
	       	    android:orientation="horizontal">
	       	    <ImageView
	       	        android:layout_height="30dp"
	       	        android:layout_width="30dp"
	       	        android:contentDescription="@string/app_name"
	       	        android:src="@drawable/ic_launcher"/>
	       	    <TextView 
		       	    android:layout_width="wrap_content"
		       	    android:layout_height="wrap_content"
		       	    android:textColor="@color/black"
		       	    android:textSize="@dimen/title"
		       	    android:layout_marginLeft="10dp"
		       	    android:text="@string/my_terminal"/>
	       	</LinearLayout>
	       	<LinearLayout 
	       	    android:layout_width="fill_parent"
	       	    android:layout_height="wrap_content"
	       	    android:padding="5dp"
	       	    android:background="@drawable/border_bg"
	       	    android:gravity="center_vertical"
	       	    android:orientation="horizontal">
	       	    <ImageView
	       	        android:layout_height="30dp"
	       	        android:layout_width="30dp"
	       	        android:contentDescription="@string/app_name"
	       	        android:src="@drawable/ic_launcher"/>
	       	    <TextView 
		       	    android:layout_width="wrap_content"
		       	    android:layout_height="wrap_content"
		       	    android:textColor="@color/black"
		       	    android:textSize="@dimen/title"
		       	    android:layout_marginLeft="10dp"
		       	    android:text="@string/my_orders"/>
	       	</LinearLayout>
	       	<LinearLayout 
	       	    android:layout_width="fill_parent"
	       	    android:layout_height="wrap_content"
	       	    android:padding="5dp"
	       	    android:background="@drawable/border_bg"
	       	    android:gravity="center_vertical"
	       	    android:orientation="horizontal">
	       	    <ImageView
	       	        android:layout_height="30dp"
	       	        android:layout_width="30dp"
	       	        android:contentDescription="@string/app_name"
	       	        android:src="@drawable/ic_launcher"/>
	       	    <TextView 
		       	    android:layout_width="wrap_content"
		       	    android:layout_height="wrap_content"
		       	    android:textColor="@color/black"
		       	    android:textSize="@dimen/title"
		       	    android:layout_marginLeft="10dp"
		       	    android:text="@string/my_collect"/>
	       	</LinearLayout>
	       	<TextView 
	       	    android:layout_width="fill_parent"
	       	    android:layout_height="wrap_content"
	       	    android:textColor="@color/black"
	       	    android:textSize="@dimen/title"
	       	    android:padding="5dp"
	       	    android:background="@drawable/border_bg"
	       	    android:text="@string/system_related"/>
	       	<LinearLayout 
	       	    android:layout_width="fill_parent"
	       	    android:layout_height="wrap_content"
	       	    android:padding="5dp"
	       	    android:background="@drawable/border_bg"
	       	    android:gravity="center_vertical"
	       	    android:orientation="horizontal">
	       	    <ImageView
	       	        android:layout_height="30dp"
	       	        android:layout_width="30dp"
	       	        android:contentDescription="@string/app_name"
	       	        android:src="@drawable/ic_launcher"/>
	       	    <TextView 
		       	    android:layout_width="wrap_content"
		       	    android:layout_height="wrap_content"
		       	    android:textColor="@color/black"
		       	    android:textSize="@dimen/title"
		       	    android:layout_marginLeft="10dp"
		       	    android:text="@string/setup_center"/>
	       	</LinearLayout>
	        <Button
	            android:id="@+id/bt_activity_menu_home"
	            android:text="主界面"
	            android:layout_width="250dp"
	    		android:layout_height="wrap_content"/>        
	   	</LinearLayout>
        
    	
        <FrameLayout 
        	android:id="@+id/sliding_body"
            android:layout_width="fill_parent"
        	android:layout_height="fill_parent">
            
    	</FrameLayout>
    	
        <LinearLayout 
        	android:id="@+id/right_sliding_tab"
        	android:background="@android:color/darker_gray"
        	android:orientation="vertical"
            android:layout_width="wrap_content"
            android:padding="5dip"
        	android:layout_height="fill_parent">
            <Button
                android:text="隐藏菜单"
                android:onClick="hideMenu"
                android:layout_width="wrap_content"
        		android:layout_height="wrap_content"/>
            <Button
                android:text="显示左菜单"
                android:onClick="showLeftMenu"
                android:layout_width="wrap_content"
        		android:layout_height="wrap_content"/>
            <Button
                android:text="菜单项3"
                android:id="@+id/button3"
                android:onClick="changeTab3"
                android:layout_width="wrap_content"
        		android:layout_height="wrap_content"/>
            <Button
                android:text="菜单项4"
                android:id="@+id/button4"
                 android:onClick="changeTab4"
                android:layout_width="wrap_content"
        		android:layout_height="wrap_content"/>
            <Button
                android:text="这个按钮证明宽度是自适应的"
                android:id="@+id/button4"
                 android:onClick="changeTab4"
                android:layout_width="wrap_content"
        		android:layout_height="wrap_content"/>
          
    	</LinearLayout>
        
        
    </com.wise.extend.SlidingMenuView>
</RelativeLayout>
