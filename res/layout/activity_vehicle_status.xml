<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF">
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="44dp"
        android:background="@drawable/border_bg"
        android:padding="2dp">
		<ImageView
            android:id="@+id/iv_activity_vehicle_status_back"
            android:layout_width="60dp"
	        android:layout_height="36dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:contentDescription="@string/app_name"
            android:src="@drawable/ic_launcher"/>
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_toLeftOf="@+id/iv_activity_vehicle_status_search"
            android:layout_toRightOf="@+id/iv_activity_vehicle_status_back"
            android:gravity="center"
            android:text="爱车车况"
            android:textColor="@color/black"
            android:textSize="@dimen/title"
            android:textStyle="bold" />
		<ImageView
            android:id="@+id/iv_activity_vehicle_status_search"
            android:visibility="invisible"
            android:layout_width="60dp"
	        android:layout_height="36dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:contentDescription="@string/app_name"/>
	</RelativeLayout>
	<HorizontalScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
		<LinearLayout 
		    android:layout_width="wrap_content"
			android:layout_height="wrap_content" 
			android:orientation="horizontal">
			<GridView 
			    android:id="@+id/gv_activity_vehicle_status"
			    android:layout_width="fill_parent"
			    android:layout_height="wrap_content"
			    android:numColumns="auto_fit"
			    android:stretchMode="columnWidth"
			    android:horizontalSpacing="10dp"/>
		</LinearLayout>
	</HorizontalScrollView>
	<TableLayout 
	    android:stretchColumns="*" 
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content">
	    <TableRow android:background="@color/black">
	        <TextView
	            android:layout_margin="0.5dp"
	            android:paddingTop="5dp"
	            android:paddingBottom="5dp"
	            android:background="@color/white"
	            android:textColor="@color/black"
	            android:textSize="@dimen/title"
	            android:gravity="center_horizontal"
	            android:text="百公里油耗"/>
	        <TextView
	            android:layout_margin="0.5dp" 
	            android:paddingTop="5dp"
	            android:paddingBottom="5dp"
	            android:background="@color/white"
	            android:textColor="@color/black"
	            android:textSize="@dimen/title"
	            android:gravity="center_horizontal"
	            android:text="月行驶里程"/>
	        <TextView
	            android:layout_margin="0.5dp" 
	            android:paddingTop="5dp"
	            android:paddingBottom="5dp"
	            android:background="@color/white"
	            android:textColor="@color/black"
	            android:textSize="@dimen/title"
	            android:gravity="center_horizontal"
	            android:text="月总耗油"/>
	        <TextView
	            android:layout_margin="0.5dp"
	            android:paddingTop="5dp"
	            android:paddingBottom="5dp"
	            android:background="@color/white" 
	            android:textColor="@color/black"
	            android:textSize="@dimen/title"
	            android:gravity="center_horizontal"
	            android:text="故障"/>
	    </TableRow>
	    <TableRow 
	        android:background="@color/black">
	        <TextView 
	            android:layout_marginLeft="0.5dp"
	            android:layout_marginRight="0.5dp"
	            android:layout_marginBottom="0.5dp"
	            android:paddingTop="5dp"
	            android:paddingBottom="5dp"
	            android:background="@color/white"
	            android:textColor="@color/black"
	            android:textSize="@dimen/title"
	            android:gravity="center_horizontal"
	            android:text="10.24L"/>
	        <TextView 
	            android:layout_marginLeft="0.5dp"
	            android:layout_marginRight="0.5dp"
	            android:layout_marginBottom="0.5dp"
	            android:paddingTop="5dp"
	            android:paddingBottom="5dp"
	            android:background="@color/white"
	            android:textColor="@color/black"
	            android:textSize="@dimen/title"
	            android:gravity="center_horizontal"
	            android:text="173KM"/>
	        <TextView 
	            android:layout_marginLeft="0.5dp"
	            android:layout_marginRight="0.5dp"
	            android:layout_marginBottom="0.5dp"
	            android:paddingTop="5dp"
	            android:paddingBottom="5dp"
	            android:background="@color/white"
	            android:textColor="@color/black"
	            android:textSize="@dimen/title"
	            android:gravity="center_horizontal"
	            android:text="16.24L"/>
	        <TextView
	            android:id="@+id/tv_activity_vehicle_status_fault" 
	            android:layout_marginLeft="0.5dp"
	            android:layout_marginRight="0.5dp"
	            android:layout_marginBottom="0.5dp"
	            android:paddingTop="5dp"
	            android:paddingBottom="5dp"
	            android:background="@color/white"
	            android:textColor="@color/red"
	            android:textSize="@dimen/title"
	            android:gravity="center_horizontal"
	            android:text="3"/>
	    </TableRow>
	</TableLayout>
	<RelativeLayout 
	    android:layout_width="fill_parent"
	    android:layout_height="fill_parent">
	    <com.wise.extend.EnergyCurveView
	        android:id="@+id/erenergycurve"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"/>	    
	    <RelativeLayout 
	        android:id="@+id/rl_activity_vehicle_status_oil"
	        android:layout_centerHorizontal="true"
	        android:layout_marginTop="80dp"
	        android:background="@drawable/energy_degree"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content">
	        <TextView
                android:id="@+id/tv_activity_vehicle_status_oil" 
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_centerHorizontal="true"
	            android:textColor="@color/black"    
	            android:textSize="30sp"        
	            android:text="11.20L"/>
	        <TextView 
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_below="@id/tv_activity_vehicle_status_oil"
	            android:layout_centerHorizontal="true"
	            android:textColor="@color/black"            
	            android:text="[点击查看详情]"/>
	    </RelativeLayout>
	    <RelativeLayout 
	        android:layout_alignParentBottom="true"
	        android:background="@color/bkg1"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content">
	        <TextView 
	            android:id="@+id/tv_activity_vehicle_status_data"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_centerInParent="true"
	            android:textColor="@color/black"
	            android:text="2013-12"/>
	        <ImageView 
	            android:id="@+id/iv_activity_vehicle_status_data_previous" 
	            android:contentDescription="@string/app_name"
	            android:layout_width="40dp"
	            android:layout_height="40dp"
	            android:layout_toLeftOf="@id/tv_activity_vehicle_status_data"
	            android:src="@drawable/ic_launcher"/>
	        <ImageView
	            android:id="@+id/iv_activity_vehicle_status_data_next" 
	            android:contentDescription="@string/app_name"
	            android:layout_width="40dp"
	            android:layout_height="40dp"
	            android:layout_toRightOf="@id/tv_activity_vehicle_status_data"
	            android:src="@drawable/ic_launcher"/>
	    </RelativeLayout>
	</RelativeLayout>	
</LinearLayout>