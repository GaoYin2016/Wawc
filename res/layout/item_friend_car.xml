<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    <RelativeLayout
        android:id="@+id/friend_car_info"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/margins"
        android:background="@color/gray_light"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/friend_information_car_brand_iv"
            android:layout_width="50dip"
            android:layout_height="50dip"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
             />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/friend_information_car_brand_iv"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/friend_information_car_brand_tv"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margins"
                android:text="宝马x86"
                android:textColor="@color/common"
	        	android:textSize="@dimen/main"
                 />
            <TextView
                android:id="@+id/friend_information_car_plate_tv"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margins"
                android:layout_marginTop="@dimen/margins"
                android:text="粤B12345"
                android:textColor="@color/common" />
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>
