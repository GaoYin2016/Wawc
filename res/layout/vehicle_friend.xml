<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#FFFFFF"
    android:orientation="vertical" >

    <!-- 头部 -->

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" 
        android:background="#3E5396"
        >

        <ImageView
            android:id="@+id/menu"
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@drawable/menu" />

        <TextView
            android:id="@+id/tv_vehicle_friend_title"
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_weight="3"
            android:gravity="center"
            android:text="@string/car_circle"
            android:textSize="12pt" />

        <ImageView
            android:id="@+id/publish_article"
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@drawable/new_article" />
    </LinearLayout>
    <!-- 标题 -->

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="120dip"
        android:background="@drawable/car"
        android:gravity="center"
         >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="3dip"
            >
   		<ImageView
            android:id="@+id/user_head"
            android:layout_width="50dip"
            android:layout_height="50dip"
            android:layout_margin="2dip"
            android:layout_gravity="center"
            />
            <TextView
                android:id="@+id/tv_qq_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="用户名"
                android:textColor="#FF3300" />

        </LinearLayout>
    </RelativeLayout>
    <!-- 搜索栏 -->

    <EditText
        android:id="@+id/search"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="Search"
        android:visibility="gone"
         />
    <!-- 显示详细评论信息 -->
	
	<RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >
		 <com.wise.list.XListView
		        android:id="@+id/article_list"
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:cacheColorHint="#00000000"
		         >
		    </com.wise.list.XListView>
		    <!-- 
		    <RelativeLayout 
		        android:layout_width="fill_parent"
        		android:layout_height="wrap_content"
        		android:layout_alignParentBottom="true"
		        >
		        <ImageView
		            android:id="@+id/publish_article"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:background="@drawable/new_article"
		            android:layout_alignParentRight="true"
		             />
		              -->
			    <LinearLayout
	                android:id="@+id/say_something"
	                android:layout_width="fill_parent"
	                android:layout_height="wrap_content"
	                android:layout_alignParentBottom="true"
	                android:visibility="gone"
	                >
	                <!-- 聊天输入框 -->
	                <include
	                    android:layout_width="fill_parent"
	                    android:layout_height="wrap_content"
	                    layout="@layout/custom_facerelativelayout" />
	            </LinearLayout>
	            <!-- 
		    </RelativeLayout>
		     -->
    </RelativeLayout>
</LinearLayout>
