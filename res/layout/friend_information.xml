<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#FFFFFF"
    android:orientation="vertical"
    tools:context=".VehicleStatusActivity" 
    >

    <!-- 头部 -->
    <RelativeLayout
        android:id="@+id/friend_home_top"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/title_hight"
        android:background="@color/blue"
         >

        <ImageView
            android:id="@+id/friend_information_back"
            android:layout_width="@dimen/title_image"
            android:layout_height="@dimen/title_image"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@drawable/side_back"  />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="@string/friend_information"
            android:textSize="@dimen/head"
            android:textColor="@color/white"
             />
    </RelativeLayout>
    
    <!-- 用户信息 -->
    <LinearLayout 
        android:layout_margin="@dimen/margins"
        android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
    	android:orientation="horizontal"
        >
        <ImageView 
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:background="@drawable/ic_launcher"
            />
        <LinearLayout 
             android:layout_width="0dip"
	    	 android:layout_height="wrap_content"
	    	 android:orientation="vertical"
	    	 android:layout_weight="6"
	    	 android:layout_marginLeft="10dip"
	    	 android:layout_gravity="center"
            >
            <TextView 
                android:id="@+id/friend_article_content"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="什么都可以"
                android:textColor="@color/common"
                />
        </LinearLayout>
    </LinearLayout>
    
    <TextView 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="他的爱车"
        android:layout_margin="@dimen/margins"
        android:textColor="@color/common"
        />
    
    
    <LinearLayout 
        android:layout_margin="@dimen/margins"
        android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
    	android:orientation="horizontal"
    	android:background="@color/gray_light"
    	android:gravity="center"
        >
        <ImageView 
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:background="@drawable/ic_launcher"
            />
        <LinearLayout 
             android:layout_width="0dip"
	    	 android:layout_height="wrap_content"
	    	 android:orientation="vertical"
	    	 android:layout_weight="6"
	    	 android:layout_gravity="center"
            >
            <TextView 
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="宝马x86"
                android:layout_margin="10dip"
                android:textColor="@color/common"
                />
            <TextView 
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="粤B12345"
                android:layout_margin="10dip"
                android:textColor="@color/common"
                />
        </LinearLayout>
    </LinearLayout>
    <TextView 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="他的车友圈"
        android:layout_margin="@dimen/margins"
        android:textColor="@color/common"
        />
</LinearLayout>
