<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#FFFFFF"
    android:orientation="vertical"
    tools:context=".VehicleStatusActivity" >

    <!-- 头部 -->

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/setting_center_menu"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@drawable/ic_launcher" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/friend_information"
            android:textSize="10pt" />

        <Button
            android:id="@+id/setting_center_home"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@drawable/ic_launcher" />
    </LinearLayout>
    
    <View 
        android:layout_width="fill_parent"
        android:layout_height="1dip"
        android:background="#000000"
        />
    <TableLayout 
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:background="#000000"
	    >
	<TableRow 
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:layout_marginRight="1dip"
            android:layout_marginLeft="1dip"
            android:layout_marginBottom="1dip"
            >
            <RelativeLayout 
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dip"
                >
                <ImageView 
                    android:id="@+id/iv_friend_head"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/image"
                    />
                <TextView 
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="大众途安"
                    android:textSize="10pt"
                    android:layout_alignTop="@id/iv_friend_head"
                    android:layout_toRightOf="@id/iv_friend_head"
                    android:textColor="#000000"
                    android:layout_marginLeft="5dip"
                    />
                <TextView 
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="粤B12345"
                    android:layout_marginLeft="5dip"
                    android:layout_alignBottom="@id/iv_friend_head"
                    android:layout_toRightOf="@id/iv_friend_head"
                    android:textColor="#000000"
                    />
            </RelativeLayout>
        </TableRow> 
        <TableRow 
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:layout_marginRight="1dip"
            android:layout_marginLeft="1dip"
            android:layout_marginBottom="1dip"
            >
            <TextView 
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/friend_vehicle"
                android:textColor="#000000"
                />
        </TableRow>
        <TableRow 
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:layout_marginRight="1dip"
            android:layout_marginLeft="1dip"
            android:layout_marginBottom="1dip"
            >
            <RelativeLayout 
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dip"
                >
                <ImageView 
                    android:id="@+id/iv_vehicle_brand"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/image"
                    />
                <TextView 
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="宝马X3"
                    android:textSize="10pt"
                    android:layout_alignTop="@id/iv_vehicle_brand"
                    android:layout_toRightOf="@id/iv_vehicle_brand"
                    android:textColor="#000000"
                    android:layout_marginLeft="5dip"
                    />
                <TextView 
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="粤B23443"
                    android:layout_marginLeft="5dip"
                    android:layout_alignBottom="@id/iv_vehicle_brand"
                    android:layout_toRightOf="@id/iv_vehicle_brand"
                    android:textColor="#000000"
                    />
            </RelativeLayout>
        </TableRow> 
        </TableLayout>
</LinearLayout>
