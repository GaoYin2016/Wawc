<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF">
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/title_hight"
        android:background="@drawable/nav_bg">
		<ImageView
            android:id="@+id/iv_activity_share_location_back"
            android:layout_width="@dimen/title_image"
	        android:layout_height="@dimen/title_image"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:contentDescription="@string/app_name"
            android:layout_marginLeft="@dimen/margins"
            android:src="@drawable/nav_back"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="@color/white"
            android:textSize="@dimen/head"
            android:text="位置分享"/>
        <Button 
            android:id="@+id/bt_activity_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/article_comment_bg"
            android:textColor="@color/white"
            android:layout_marginRight="@dimen/margins"
            android:text="分享"/>
	</RelativeLayout>
	<LinearLayout 
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:orientation="vertical"
	    android:padding="10dp">
	    <LinearLayout 
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginBottom="@dimen/margins"
	        android:background="@drawable/bg_share"
	        android:orientation="horizontal">
	        <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="当前位置"
                android:layout_marginRight="@dimen/double_margins"
                android:textColor="@color/common"
                android:textSize="@dimen/content"/>
	        <TextView 
	            android:id="@+id/tv_adress"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:textColor="@color/common"
	            android:textSize="@dimen/content"/>
	    </LinearLayout>
	    <LinearLayout 
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginBottom="@dimen/margins"
            android:background="@drawable/bg_share"
            android:orientation="horizontal">
	        <TextView 
	            android:id="@+id/tv_activity_share_location"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_marginRight="@dimen/double_margins"
                android:textColor="@color/common"
                android:textSize="@dimen/content"
	            android:text="分享原因"/>
	        <TextView 
                android:id="@+id/tv_reason"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/common"
                android:textSize="@dimen/content"/>
	    </LinearLayout>
	    <LinearLayout 
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margins"
            android:background="@drawable/bg_share"
            android:orientation="horizontal">
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="详情描述"
                android:layout_marginRight="@dimen/double_margins"
                android:textColor="@color/common"
                android:textSize="@dimen/content"/>            
		        <EditText 
		            android:id="@+id/et_share_content"
		            android:layout_width="fill_parent"
		            android:layout_height="wrap_content"
		            android:background="@null"
		            android:hint="详情描述"
		            android:maxLength="5"/>
        </LinearLayout>
	    <LinearLayout 
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:orientation="horizontal">
	        <ImageView 
	            android:id="@+id/iv_photo"
	            android:layout_width="80dp"
	            android:layout_height="80dp"
	            android:layout_marginRight="@dimen/margins"
	            android:contentDescription="@string/app_name"/>
	        <ImageView 
	            android:id="@+id/iv_camera"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:contentDescription="@string/app_name"
                android:src="@drawable/body_icon_photo"/>
	    </LinearLayout>
	</LinearLayout>	
</LinearLayout>
