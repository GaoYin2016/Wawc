<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/gray">
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="44dp"
        android:background="@drawable/border_bg"
        android:padding="2dp">
		<ImageView
            android:id="@+id/iv_activity_account_menu"
            android:layout_width="60dp"
	        android:layout_height="36dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:contentDescription="@string/app_name"
            android:src="@drawable/ic_launcher"/>
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_toLeftOf="@+id/iv_activity_account_home"
            android:layout_toRightOf="@+id/iv_activity_account_menu"
            android:gravity="center"
            android:text="@string/my_account"
            android:textColor="@color/black"
            android:textSize="@dimen/title"
            android:textStyle="bold" />
		<ImageView
            android:id="@+id/iv_activity_account_home"
            android:layout_width="60dp"
	        android:layout_height="36dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:contentDescription="@string/app_name"
            android:src="@drawable/ic_launcher"/>
	</RelativeLayout>
	<RelativeLayout 
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:background="@color/white"
	    android:layout_marginBottom="20dp"
	    android:padding="10dp">
	    <ImageView 
	        android:id="@+id/iv_activity_account_pic"
	        android:src="@drawable/ic_launcher"
	        android:layout_marginRight="10dp"
	        android:layout_width="40dp"
	        android:layout_height="40dp"/>
	    <TextView
	        android:id="@+id/tv_activity_account_name" 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textColor="@color/black"
	        android:textSize="@dimen/title"
	        android:layout_toRightOf="@id/iv_activity_account_pic"/>
	    <TextView 
	        android:id="@+id/tv_activity_city"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textColor="@color/black"
	        android:textSize="@dimen/title"
	        android:layout_below="@id/tv_activity_account_name"
	        android:layout_toRightOf="@id/iv_activity_account_pic"/>
	    <TextView 
	        android:id="@+id/tv_Balance"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="10dp"
	        android:textColor="@color/black"
            android:textSize="@dimen/title"
	        android:layout_below="@id/tv_activity_account_name"
	        android:layout_toRightOf="@id/tv_activity_city"
	        android:text="账户余额：0元"/>
	</RelativeLayout> 
	<TextView 
	    android:background="@drawable/border_bg"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="@dimen/title"
        android:padding="10dp"
        android:text="我的爱车"/>
    <RelativeLayout 
        android:id="@+id/account_to_my_vehicle"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">
        <ImageView 
            android:id="@+id/iv_user_car_logo"
            android:layout_width="40dp"
            android:layout_height="40dp"/>
        <TextView 
            android:id="@+id/tv_carBrand"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="大众途安"
            android:textSize="10pt"
            android:layout_alignTop="@id/iv_user_car_logo"
            android:layout_toRightOf="@id/iv_user_car_logo"
            android:textColor="#000000"
            android:layout_marginLeft="5dip"/>
        <TextView 
            android:id="@+id/tv_carNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="粤B12345"
            android:layout_marginLeft="5dip"
            android:layout_alignBottom="@id/iv_user_car_logo"
            android:layout_toRightOf="@id/iv_user_car_logo"
            android:textColor="#000000"/>        
	     <ImageView 
	         android:layout_width="20dip"
	         android:layout_height="20dip"
	         android:background="@drawable/ic_launcher"
	         android:layout_centerVertical="true"
	         android:layout_alignParentRight="true"
	         android:layout_marginRight="5dip"/>
    </RelativeLayout>
	<TextView 
	    android:background="@drawable/border_bg"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="@dimen/title"
        android:padding="10dp"
        android:text="@string/contact_note"/>
	<RelativeLayout 
        android:layout_width="fill_parent"        
        android:layout_height="wrap_content"
        android:padding="10dp">
        <TextView
            android:id="@+id/tv_activity_account_consignee"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="@string/consignee"
            android:textColor="@color/black"
            android:textSize="@dimen/title"/>
	     <EditText 
	         android:id="@+id/et_activity_account_consignee"
	         android:layout_width="fill_parent"
	         android:layout_height="wrap_content"
	         android:inputType="text"
             android:background="@null"
	         android:layout_toRightOf="@id/tv_activity_account_consignee"
	         android:layout_alignParentRight="true"/>
    </RelativeLayout>
    <RelativeLayout 
        android:layout_width="fill_parent"        
        android:layout_height="wrap_content"
        android:padding="10dp">
        <TextView
            android:id="@+id/tv_activity_account_adress"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="@string/address"
            android:textColor="@color/black"
            android:textSize="@dimen/title"/>
	     <EditText 
	         android:id="@+id/et_activity_account_adress"
	         android:layout_width="fill_parent"
	         android:layout_height="wrap_content"
	         android:inputType="text"
	         android:background="@null"
	         android:layout_toRightOf="@id/tv_activity_account_adress"
	         android:layout_alignParentRight="true"/>
    </RelativeLayout>
    <RelativeLayout 
        android:layout_width="fill_parent"        
        android:layout_height="wrap_content"
        android:padding="10dp">
        <TextView
            android:id="@+id/tv_activity_account_phone"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="@string/tel"
            android:textColor="@color/black"
            android:textSize="@dimen/title"/>
	     <EditText 
	         android:id="@+id/et_activity_account_phone"
	         android:layout_width="fill_parent"
	         android:layout_height="wrap_content"
	         android:inputType="phone"
             android:background="@null"
	         android:layout_toRightOf="@id/tv_activity_account_phone"
	         android:layout_alignParentRight="true"/>
    </RelativeLayout>
    <Button 
        android:id="@+id/bt_activity_account_logout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/login_out"/>
</LinearLayout>