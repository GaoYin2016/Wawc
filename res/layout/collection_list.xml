<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#F4F4F4"
    android:orientation="vertical"
    >
    <TableLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#000000"
        >
        <TableRow 
            android:layout_width="fill_parent"
        	android:layout_height="wrap_content"
        	android:layout_marginTop="1dip"
        	android:background="#F7F7FC"
        	android:layout_gravity="center"
            >
            <TextView 
                android:id="@+id/collection_tv_name"
                android:layout_width="0dip"
        		android:layout_height="fill_parent"
        		android:text="沙河西路加油站"
        		android:textColor="#000000"
        		android:gravity="center|left"
        		android:layout_weight="1"
        		android:paddingTop="5dip"
        		android:paddingBottom="5dip"
                />
            <TextView 
                android:layout_width="0dip"
        		android:layout_height="fill_parent"
        		android:text="560M"
        		android:textColor="#000000"
        		android:gravity="center|right"
        		android:layout_weight="1"
        		android:paddingTop="5dip"
        		android:paddingBottom="5dip"
                />
        </TableRow>
        <TableRow 
            android:layout_width="fill_parent"
        	android:layout_height="wrap_content"
        	android:background="#FFFFFF"
            >
            <TextView 
                android:layout_width="0dip"
        		android:layout_height="fill_parent"
        		android:text="地址："
        		android:textColor="#000000"
        		android:layout_weight="1"
                />
            <TextView 
                android:id="@+id/collection_tv_address"
                android:layout_width="0dip"
        		android:layout_height="fill_parent"
        		android:textColor="#000000"
        		android:layout_weight="3"
        		android:gravity="center|left"
                />
            <ImageView
                android:id="@+id/collection_iv_go_here"
                android:layout_width="0dip"
                android:layout_height="20dip"
                android:src="@drawable/image"
                android:layout_weight="1"
                android:gravity="center|right"
                ></ImageView>
        </TableRow>
        <TableRow 
            android:layout_width="fill_parent"
        	android:layout_height="wrap_content"
        	android:layout_marginTop="1dip"
        	android:background="#FFFFFF"
            >
            <TextView 
                android:layout_width="0dip"
        		android:layout_height="fill_parent"
        		android:text="电话："
        		android:textColor="#000000"
        		android:layout_weight="1"
                />
            <TextView 
                android:id="@+id/collection_tv_tel"
                android:layout_width="0dip"
        		android:layout_height="fill_parent"
        		android:textColor="#000000"
        		android:layout_weight="3"
        		android:gravity="center|left"
                />
            <ImageView
                android:id="@+id/collection_iv_call_phone"
                android:layout_width="0dip"
                android:layout_height="20dip"
                android:src="@drawable/image"
                android:gravity="center|right"
                android:layout_weight="1"
                ></ImageView>
        </TableRow>
    </TableLayout>	
</LinearLayout>