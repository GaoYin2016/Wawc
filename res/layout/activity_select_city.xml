<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/title_hight"
        android:background="@drawable/nav_bg">
		<ImageView
            android:id="@+id/iv_activity_account_menu"
            android:layout_width="@dimen/title_image"
	        android:layout_height="@dimen/title_image"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margins"
            android:contentDescription="@string/app_name"
            android:src="@drawable/nav_back"/>
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:text="选择城市"
            android:textColor="@color/white"
            android:textSize="@dimen/title"
            android:textStyle="bold"/>
		<ImageView
            android:id="@+id/iv_activity_account_home"
            android:layout_width="60dp"
	        android:layout_height="36dp"
	        android:visibility="gone"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:contentDescription="@string/app_name"
            android:src="@drawable/ic_launcher"/>
	</RelativeLayout>
	<com.wise.service.ClearEditText
        android:id="@+id/filter_edit"
        android:layout_marginTop="5dip"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/search_bar_edit_selector"
        android:drawableLeft="@drawable/search_bar_icon_normal"
        android:hint="请输入关键字"
        android:singleLine="true"
        android:textSize="15.0dip" />
	<TextView 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/margins"
        android:paddingRight="@dimen/margins"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:background="@color/gray_weak"
        android:textColor="@color/common_inactive"
        android:text="当前定位"/>
	<TextView 
        android:id="@+id/tv_activity_select_city_location"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/margins"
        android:textColor="@color/common"
        android:text="正在定位..."/>
    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >
        <ListView
            android:id="@+id/lv_activity_select_city"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="center"
            android:dividerHeight="1dp"
            android:divider="@color/gray_lights" />
        <LinearLayout
            android:id="@+id/ll_activity_select_city"
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    android:orientation="vertical">
		    <TextView
		        android:id="@+id/tv_select_city_title"
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:paddingLeft="@dimen/margins"
		        android:paddingRight="@dimen/margins"
		        android:paddingTop="5dp"
		        android:paddingBottom="5dp"
		        android:background="@color/gray_weak"
		        android:textColor="@color/common_inactive"
		        android:text="热门城市"/>
		</LinearLayout>
        <!-- 点击字母显示 -->
        <TextView
            android:id="@+id/dialog"
            android:layout_width="80.0dip"
            android:layout_height="80.0dip"
            android:layout_gravity="center"
            android:background="@drawable/show_head_toast_bg"
            android:gravity="center"
            android:textColor="#ffffffff"
            android:textSize="30.0dip"
            android:visibility="invisible" />        
        <!-- 右边字母索引 -->
        <com.wise.service.SideBar
            android:id="@+id/sidrbar"
            android:layout_width="30.0dip"
            android:layout_height="fill_parent"
            android:layout_gravity="right|center" />
    </FrameLayout>
</LinearLayout>