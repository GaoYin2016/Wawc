<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <!-- 选择省份 -->

    <RelativeLayout
        android:id="@+id/illegal_city_top"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/title_hight"
        android:layout_alignParentTop="true"
        android:background="@drawable/nav_bg"
        android:gravity="center" >

        <ImageView
            android:id="@+id/illegal_province_back"
            android:layout_width="@dimen/title_width"
            android:layout_height="@dimen/title_image"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:src="@drawable/nav_back" />

        <TextView
            android:id="@+id/my_vechile_edit"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="@string/illegal_city"
            android:textColor="@color/white"
            android:textSize="@dimen/head" />
    </RelativeLayout>

    <ListView
        android:id="@+id/illegal_provnice_list"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/illegal_city_top"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:divider="@color/gray"
        android:dividerHeight="0.5dip" >
    </ListView>

    <ListView
        android:id="@+id/illegal_city_list"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/illegal_city_top"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:divider="@color/gray"
        android:dividerHeight="0.5dip"
        android:visibility="gone" >
    </ListView>

</RelativeLayout>