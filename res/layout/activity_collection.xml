<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/gray"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/title_hight"
        android:background="@drawable/nav_bg">
        <ImageView
            android:id="@+id/my_vechile_menu"
            android:layout_width="@dimen/title_image"
            android:layout_height="@dimen/title_image"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:clickable="true"
            android:layout_marginLeft="@dimen/margins"
            android:contentDescription="@string/app_name"
            android:src="@drawable/side_left"/>
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:text="我的收藏"
            android:textColor="@color/white"
            android:textSize="@dimen/head"/>
    </RelativeLayout>
    <com.wise.list.XListView 
        android:id="@+id/my_collection_list"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:divider="@null"></com.wise.list.XListView>    
</LinearLayout>