<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
	<RelativeLayout 
        android:id="@+id/ll_weather"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/double_margins"
        android:orientation="vertical">
        <TextView 
            android:id="@+id/tv_item_weather_city"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:textColor="@color/white"
            android:clickable="true"
            android:background="@drawable/home_btn_changecity"
            android:text="深圳"/>
        <LinearLayout 
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout 
	            android:layout_height="wrap_content"
	            android:layout_width="fill_parent"
	            android:layout_marginBottom="@dimen/double_margins"
	            android:orientation="horizontal">
	            <TextView 
	                android:id="@+id/tv_item_weather_wd"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:textStyle="normal"
	                android:textSize="60sp"
	                android:textColor="@color/white"
	                android:text="12°"/>
	            <TextView 
	                android:id="@+id/tv_item_weather_sky"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:textColor="@color/white"
	                android:textSize="@dimen/main"
	                android:text="多云转晴"/>
	        </LinearLayout>
	        <TextView 
	            android:id="@+id/tv_item_weather_date"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:textColor="@color/white"
	            android:textSize="@dimen/content"
	            android:layout_marginBottom="5dp"
	            android:text="10月27日  星期一"/>
	        <LinearLayout 
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:orientation="horizontal"
	            android:layout_marginBottom="5dp">
	            <TextView 
	                android:id="@+id/tv_item_weather_temp1"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_marginRight="10dp"
	                android:textColor="@color/white"
	                android:textSize="@dimen/content"
	                android:text="6-18°C"/>
	            <TextView 
	                android:id="@+id/tv_item_weather"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:textColor="@color/white"
	                android:textSize="@dimen/content"
	                android:text="东风3级    湿度84%"/>
	        </LinearLayout>
	        
	        <LinearLayout 
	            android:layout_height="wrap_content"
	            android:layout_width="fill_parent"
	            android:orientation="horizontal">
	            <TextView 
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:textColor="@color/white"
	                android:textSize="@dimen/content"
	                android:text="洗车指数："/>
	            <TextView
	                android:id="@+id/tv_item_weather_index_xc" 
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:textColor="@color/white"
	                android:textSize="@dimen/content"
	                android:background="@drawable/home_xc"
	                android:layout_marginRight="@dimen/margins"
	                android:text="适宜"/>
	            <TextView 
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:textColor="@color/white"
	                android:textSize="@dimen/content"
	                android:text="车辆限行："/>
	            <TextView 
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:textColor="@color/white"
	                android:background="@drawable/home_xx"
	                android:textSize="@dimen/content"
	                android:text="限行"/>
	        </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>