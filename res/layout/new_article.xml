<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#FFFFFF"
    android:orientation="vertical" >
    <!-- 头部 -->
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/title_hight"
        android:orientation="horizontal"
        android:background="@color/blue"
         >

        <Button
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:background="@drawable/ic_launcher" />
    </LinearLayout>
    
    <LinearLayout 
        android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
    	android:orientation="vertical"
    	android:layout_margin="@dimen/body_padding"
    	android:background="@drawable/new_article_edit_border"
        >
    <EditText 
        android:id="@+id/et_publish_article"
        android:layout_width="fill_parent"
        android:layout_marginTop="@dimen/margins"
        android:layout_marginLeft="@dimen/margins"
        android:layout_height="wrap_content"
        android:lines = "8"
        android:gravity = "top"
        android:scrollbars="vertical"
        android:background="@null"
        />
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        
        <ImageView 
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:background="@drawable/body_icon_lbs_2"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            />
        <TextView 
            android:id="@+id/localtion"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:text="广东省深圳市南山区南山大道115号"
            android:layout_marginLeft="@dimen/margins"
            android:layout_weight="18"
            />
    </LinearLayout>
    </LinearLayout>
    
    <HorizontalScrollView
        
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dip"
        android:scrollbarAlwaysDrawHorizontalTrack="false">
    <LinearLayout 
        android:id="@+id/my_linearLayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <ImageView 
            android:id="@+id/take_photo"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:background="@drawable/camera"
            />
        </LinearLayout>
    </HorizontalScrollView>
    <Button 
        android:id="@+id/publish"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:text="发送"
        />
</LinearLayout>