<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".VehicleStatusActivity" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/title_hight"
        android:background="@drawable/nav_bg"
        android:gravity="center" >

        <ImageView
            android:id="@+id/add_vechile_cancle"
            android:layout_width="@dimen/title_image"
            android:layout_height="@dimen/title_image"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@drawable/nav_back" />

        <TextView
            android:id="@+id/tv_add_vechile_title"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="@string/add_car"
            android:textColor="@color/white"
            android:textSize="@dimen/head" />

        <TextView
            android:id="@+id/add_vechile_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/margins"
            android:background="@drawable/bt_bg"
            android:text="@string/save"
            android:textColor="@color/white"
            android:textSize="@dimen/main" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/horizontalscrollview" >

        <TableLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >

            <View
                android:layout_width="fill_parent"
                android:layout_height="@dimen/double_margins"
                android:background="@color/gray" />
            <!-- 基本资料 -->

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="@color/gray_lights"
                android:textSize="@dimen/main" >

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:padding="@dimen/margins"
                    android:text="@string/base_information"
                    android:textColor="@color/common"
                    android:textSize="@dimen/main" />
            </TableRow>

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.5dip"
                android:background="@color/gray" />
            <!-- 车牌号 -->

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginLeft="1dip"
                android:layout_marginRight="1dip"
                android:layout_marginTop="1dip"
                android:background="#FFFFFF" >

                <TextView
                    android:layout_width="0dip"
                    android:layout_height="fill_parent"
                    android:layout_weight="4"
                    android:gravity="center_vertical"
                    android:padding="@dimen/margins"
                    android:text="@string/car_number"
                    android:textColor="@color/common_inactive"
                    android:textSize="@dimen/content" />

                <EditText
                    android:id="@+id/et_new_vercher_number"
                    android:layout_width="0dip"
                    android:layout_height="fill_parent"
                    android:layout_weight="5"
                    android:background="@null"
                    android:hint="粤B14455"
                    android:padding="@dimen/margins"
                    android:textColor="@color/common"
                    android:textSize="@dimen/content" />
            </TableRow>

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.5dip"
                android:background="@color/gray" />
            <!-- 品牌 -->

            <TableRow
                android:id="@+id/new_vehicle_choice_brank"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginLeft="1dip"
                android:layout_marginRight="1dip"
                android:layout_marginTop="1dip"
                android:background="@drawable/side_seting_item" >

                <TextView
                    android:layout_width="0dip"
                    android:layout_height="fill_parent"
                    android:layout_weight="4"
                    android:gravity="center_vertical"
                    android:padding="@dimen/margins"
                    android:text="@string/brand"
                    android:textColor="@color/common_inactive"
                    android:textSize="@dimen/content" />

                <TextView
                    android:id="@+id/new_vehicle_brank"
                    android:layout_width="0dip"
                    android:layout_height="fill_parent"
                    android:layout_weight="5"
                    android:drawableRight="@drawable/body_icon_arrow2"
                    android:gravity="center_vertical"
                    android:padding="@dimen/margins"
                    android:text="大众"
                    android:textColor="@color/common"
                    android:textSize="@dimen/content" />
            </TableRow>

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.5dip"
                android:background="@color/gray" />
            <!-- 车型 -->

            <TableRow
                android:id="@+id/new_vericher_series"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginLeft="1dip"
                android:layout_marginRight="1dip"
                android:layout_marginTop="1dip"
                android:background="@drawable/side_seting_item" >

                <TextView
                    android:layout_width="0dip"
                    android:layout_height="fill_parent"
                    android:layout_weight="4"
                    android:gravity="center_vertical"
                    android:padding="@dimen/margins"
                    android:text="@string/model"
                    android:textColor="@color/common_inactive"
                    android:textSize="@dimen/content" />

                <TextView
                    android:id="@+id/tv_new_vericher_series"
                    android:layout_width="0dip"
                    android:layout_height="fill_parent"
                    android:layout_weight="5"
                    android:drawableRight="@drawable/body_icon_arrow2"
                    android:padding="@dimen/margins"
                    android:text="途安"
                    android:textColor="@color/common"
                    android:textSize="@dimen/content" />
            </TableRow>

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.5dip"
                android:background="@color/gray" />
            <!-- 车款 -->

            <TableRow
                android:id="@+id/new_vericher_type"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginLeft="1dip"
                android:layout_marginRight="1dip"
                android:layout_marginTop="1dip"
                android:background="@drawable/side_seting_item" >

                <TextView
                    android:layout_width="0dip"
                    android:layout_height="fill_parent"
                    android:layout_weight="4"
                    android:gravity="center_vertical"
                    android:padding="@dimen/margins"
                    android:text="@string/vehicle_style"
                    android:textColor="@color/common_inactive"
                    android:textSize="@dimen/content" />

                <TextView
                    android:id="@+id/tv_new_vericher_type"
                    android:layout_width="0dip"
                    android:layout_height="fill_parent"
                    android:layout_weight="5"
                    android:drawableRight="@drawable/body_icon_arrow2"
                    android:gravity="center_vertical"
                    android:maxLines="1"
                    android:padding="@dimen/margins"
                    android:text="自动豪华睿智版"
                    android:textColor="@color/common"
                    android:textSize="@dimen/content" />
            </TableRow>

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.5dip"
                android:background="@color/gray" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="@dimen/double_margins"
                android:background="@color/gray" />
            <!-- 违章查询 -->

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="@color/gray_light"
                android:textSize="@dimen/main" >

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:padding="@dimen/margins"
                    android:text="@string/against_rules"
                    android:textColor="@color/common"
                    android:textSize="@dimen/main" />
            </TableRow>

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.5dip"
                android:background="@color/gray" />
            <!-- 发动机型号 -->

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginLeft="1dip"
                android:layout_marginRight="1dip"
                android:layout_marginTop="1dip"
                android:background="#FFFFFF" >

                <TextView
                    android:layout_width="0dip"
                    android:layout_height="fill_parent"
                    android:layout_weight="4"
                    android:gravity="center_vertical"
                    android:padding="@dimen/margins"
                    android:text="@string/engine_number"
                    android:textColor="@color/common_inactive"
                    android:textSize="@dimen/content" />

                <EditText
                    android:id="@+id/et_new_vehicle_engine_number"
                    android:layout_width="0dip"
                    android:layout_height="fill_parent"
                    android:layout_weight="5"
                    android:background="@null"
                    android:hint="144556"
                    android:inputType="number"
                    android:padding="@dimen/margins"
                    android:textColor="@color/common"
                    android:textSize="@dimen/content" />
            </TableRow>

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.5dip"
                android:background="@color/gray" />
            <!-- 车架号 -->

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginLeft="1dip"
                android:layout_marginRight="1dip"
                android:layout_marginTop="1dip"
                android:background="#FFFFFF" >

                <TextView
                    android:layout_width="0dip"
                    android:layout_height="fill_parent"
                    android:layout_weight="4"
                    android:gravity="center_vertical"
                    android:padding="@dimen/margins"
                    android:text="@string/vehicle_number"
                    android:textColor="@color/common_inactive"
                    android:textSize="@dimen/content" />

                <EditText
                    android:id="@+id/et_new_car_number"
                    android:layout_width="0dip"
                    android:layout_height="fill_parent"
                    android:layout_weight="5"
                    android:background="@null"
                    android:hint="144556"
                    android:inputType="number"
                    android:padding="@dimen/margins"
                    android:textColor="@color/common"
                    android:textSize="@dimen/content" />
            </TableRow>
            <!-- 车务提醒 -->

            <View
                android:layout_width="fill_parent"
                android:layout_height="@dimen/double_margins"
                android:background="@color/gray" />

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="@color/gray_lights"
                android:textSize="@dimen/main" >

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:padding="@dimen/margins"
                    android:text="@string/traffic_department"
                    android:textColor="@color/common"
                    android:textSize="@dimen/main" />
            </TableRow>

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.5dip"
                android:background="@color/gray" />
            <!-- 保险公司 -->

            <TableRow
                android:id="@+id/new_vehicle_choice_insurance"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginLeft="1dip"
                android:layout_marginRight="1dip"
                android:layout_marginTop="1dip"
                android:background="@drawable/side_seting_item" >

                <TextView
                    android:layout_width="0dip"
                    android:layout_height="fill_parent"
                    android:layout_weight="4"
                    android:gravity="center_vertical"
                    android:padding="@dimen/margins"
                    android:text="@string/insurance_company"
                    android:textColor="@color/common_inactive"
                    android:textSize="@dimen/content" />

                <TextView
                    android:id="@+id/new_vehicle_show_insurance"
                    android:layout_width="0dip"
                    android:layout_height="fill_parent"
                    android:layout_weight="5"
                    android:drawableRight="@drawable/body_icon_arrow2"
                    android:gravity="center_vertical"
                    android:padding="@dimen/margins"
                    android:text="太平洋保险"
                    android:textColor="@color/common"
                    android:textSize="@dimen/content" />
            </TableRow>

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.5dip"
                android:background="@color/gray" />
            <!-- 保险时间 -->

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginLeft="1dip"
                android:layout_marginRight="1dip"
                android:layout_marginTop="1dip"
                android:background="#FFFFFF" >

                <TextView
                    android:layout_width="0dip"
                    android:layout_height="fill_parent"
                    android:layout_weight="4"
                    android:gravity="center_vertical"
                    android:padding="@dimen/margins"
                    android:text="@string/insurance_time"
                    android:textColor="@color/common_inactive"
                    android:textSize="@dimen/content" />

                <TextView
                    android:id="@+id/tv_insurance_over_time"
                    android:layout_width="0dip"
                    android:layout_height="fill_parent"
                    android:layout_weight="5"
                    android:gravity="center_vertical"
                    android:padding="@dimen/margins"
                    android:text="4015年"
                    android:textColor="@color/common"
                    android:textSize="@dimen/content" />
            </TableRow>

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.5dip"
                android:background="@color/gray" />
            <!-- 5s店 -->

            <TableRow
                android:id="@+id/add_vehicle_maintain"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginLeft="1dip"
                android:layout_marginRight="1dip"
                android:layout_marginTop="1dip"
                android:background="@drawable/side_seting_item" >

                <TextView
                    android:layout_width="0dip"
                    android:layout_height="fill_parent"
                    android:layout_weight="4"
                    android:gravity="center_vertical"
                    android:padding="@dimen/margins"
                    android:text="@string/maintain_shop"
                    android:textColor="@color/common_inactive"
                    android:textSize="@dimen/content" />

                <TextView
                    android:id="@+id/new_vehicle_show_maintain"
                    android:layout_width="0dip"
                    android:layout_height="fill_parent"
                    android:layout_weight="5"
                    android:drawableRight="@drawable/body_icon_arrow2"
                    android:gravity="center_vertical"
                    android:padding="@dimen/margins"
                    android:text="西丽大众5s店"
                    android:textColor="@color/common"
                    android:textSize="@dimen/content" />
            </TableRow>

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.5dip"
                android:background="@color/gray" />
            <!-- 当前里程 -->

            <TableRow
                android:id="@+id/my_vehicle_insurance_mileage"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginLeft="1dip"
                android:layout_marginRight="1dip"
                android:layout_marginTop="1dip"
                android:background="@drawable/side_seting_item" >

                <TextView
                    android:layout_width="0dip"
                    android:layout_height="fill_parent"
                    android:layout_weight="4"
                    android:gravity="center_vertical"
                    android:padding="@dimen/margins"
                    android:text="@string/current_mileage"
                    android:textColor="@color/common_inactive"
                    android:textSize="@dimen/content" />

                <TextView
                    android:id="@+id/my_vehicle_mileage"
                    android:layout_width="0dip"
                    android:layout_height="fill_parent"
                    android:layout_weight="5"
                    android:background="@null"
                    android:drawableRight="@drawable/body_icon_arrow2"
                    android:gravity="center_vertical"
                    android:hint="56000Km"
                    android:inputType="number"
                    android:padding="@dimen/margins"
                    android:textColor="@color/common"
                    android:textSize="@dimen/content" />
            </TableRow>

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.5dip"
                android:background="@color/gray" />
            <!-- 最后保养里程 -->

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginLeft="1dip"
                android:layout_marginRight="1dip"
                android:layout_marginTop="1dip"
                android:background="#FFFFFF" >

                <TextView
                    android:layout_width="0dip"
                    android:layout_height="fill_parent"
                    android:layout_weight="4"
                    android:gravity="center_vertical"
                    android:padding="@dimen/margins"
                    android:text="@string/last_insurance_mileage"
                    android:textColor="@color/common_inactive"
                    android:textSize="@dimen/content" />

                <EditText
                    android:id="@+id/et_last_insurance_mileage"
                    android:layout_width="0dip"
                    android:layout_height="fill_parent"
                    android:layout_weight="5"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:hint="56000Km"
                    android:inputType="number"
                    android:padding="@dimen/margins"
                    android:textColor="@color/common"
                    android:textSize="@dimen/content" />
            </TableRow>

            <!-- 最后保养时间 -->

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginLeft="1dip"
                android:layout_marginRight="1dip"
                android:layout_marginTop="1dip"
                android:background="#FFFFFF" >

                <TextView
                    android:layout_width="0dip"
                    android:layout_height="fill_parent"
                    android:layout_weight="4"
                    android:gravity="center_vertical"
                    android:padding="@dimen/margins"
                    android:text="@string/last_insurance_time"
                    android:textColor="@color/common_inactive"
                    android:textSize="@dimen/content" />

                <TextView
                    android:id="@+id/et_last_maintain_time"
                    android:layout_width="0dip"
                    android:layout_height="fill_parent"
                    android:layout_weight="5"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:hint="56000Km"
                    android:inputType="number"
                    android:padding="@dimen/margins"
                    android:textColor="@color/common"
                    android:textSize="@dimen/content" />
            </TableRow>

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.5dip"
                android:background="@color/gray" />
            <!-- 购车时间 -->

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginLeft="1dip"
                android:layout_marginRight="1dip"
                android:layout_marginTop="1dip"
                android:background="#FFFFFF" >

                <TextView
                    android:layout_width="0dip"
                    android:layout_height="fill_parent"
                    android:layout_weight="4"
                    android:gravity="center_vertical"
                    android:padding="@dimen/margins"
                    android:text="@string/shopping_time"
                    android:textColor="@color/common_inactive"
                    android:textSize="@dimen/content" />

                <TextView
                    android:id="@+id/et_new_vehicle_buy_car_time"
                    android:layout_width="0dip"
                    android:layout_height="fill_parent"
                    android:layout_weight="5"
                    android:gravity="center_vertical"
                    android:padding="@dimen/margins"
                    android:text="4009"
                    android:textColor="@color/common"
                    android:textSize="@dimen/content" />
            </TableRow>
        </TableLayout>
    </ScrollView>

</LinearLayout>